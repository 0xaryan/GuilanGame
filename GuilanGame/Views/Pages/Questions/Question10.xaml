<controls:QuestionPage
    x:Class="GuilanGame.Views.Pages.Questions.Question10"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:GuilanGame.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:GuilanGame.Views.Pages.Questions"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="ThisPage"
    Title="چه متنی روی در مرکز کامپیوتر کارشناسی فنی هست؟"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Black"
    FlowDirection="RightToLeft"
    FontFamily="{StaticResource Fonts.IRANSans}"
    QuestionHint="کارکنان دانشگاه چیزی روی درخت هک نمیکنن"
    TextBlock.FontSize="15"
    TextBlock.Foreground="White"
    mc:Ignorable="d">

    <Grid>
        <i:Interaction.Behaviors>
            <ei:FluidMoveBehavior />
        </i:Interaction.Behaviors>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="_QuestionArea"
            Grid.Row="0"
            Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Image
                x:Name="QImage"
                Grid.Row="0"
                Source="/Assets/Photos/QuestionData/Level10-Q.jpg"
                Stretch="Uniform" />

            <TextBlock
                Grid.Row="1"
                Margin="10"
                TextWrapping="Wrap">
                میتونی بگی چه چیزی روی در مرکز کامپیوتر کارشناسی فنی نوشته شده؟ اگه بتونی دقیقا بنویسیش که امتیاز بیشتری هم میگیری.
            </TextBlock>

            <Grid Grid.Row="2" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <RadioButton
                    x:Name="Chk1"
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5"
                    Foreground="White"
                    Style="{DynamicResource GuilanGame.QuizRadio}">
                    <TextBlock FontSize="20">یک عدد و یک حرف الفبا</TextBlock>
                </RadioButton>
                <RadioButton
                    x:Name="Chk2"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    Foreground="White"
                    Style="{DynamicResource GuilanGame.QuizRadio}">
                    <TextBlock FontSize="20">یک رقم و یک حرف</TextBlock>
                </RadioButton>
                <RadioButton
                    x:Name="Chk3"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5"
                    Foreground="White"
                    Style="{DynamicResource GuilanGame.QuizRadio}">
                    <TextBlock FontSize="20">یک حرف الفبا</TextBlock>
                </RadioButton>
                <RadioButton
                    x:Name="Chk4"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Foreground="White"
                    Style="{DynamicResource GuilanGame.QuizRadio}">
                    <TextBlock FontSize="20">یک عدد</TextBlock>
                </RadioButton>
                <StackPanel
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Margin="0,10"
                    Orientation="Horizontal"
                    TextBlock.FontSize="20">
                    <TextBlock>اگه میتونی متن دقیق رو هم بنویس:</TextBlock>
                    <TextBox
                        x:Name="InputTextBox"
                        Width="250"
                        Margin="5,0"
                        MaxLength="5"
                        TextAlignment="Center" />
                </StackPanel>
            </Grid>

        </Grid>

        <Grid
            x:Name="_AnswerArea"
            Grid.Row="0"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Image
                Grid.Row="0"
                Source="/Assets/Photos/QuestionData/Level10-A.jpg"
                Stretch="{Binding ElementName=QImage, Path=Stretch}" />

            <TextBlock
                Grid.Row="1"
                Margin="10"
                Text="{Binding ElementName=ThisPage, Path=ResultMessage}"
                TextWrapping="Wrap" />

        </Grid>

        <Border
            x:Name="_HintBorder"
            Grid.Row="1"
            Margin="10,5"
            Background="#3395FF8F"
            BorderBrush="{StaticResource HastiUI.SolidColorBrushes.ParkGreen}"
            BorderThickness="5,0,0,0"
            Visibility="Collapsed">
            <TextBlock
                Grid.Row="3"
                Margin="10,5"
                Foreground="{StaticResource HastiUI.SolidColorBrushes.LowGreen}"
                Text="{Binding QuestionHint, ElementName=ThisPage}"
                TextWrapping="Wrap" />
        </Border>
    </Grid>
</controls:QuestionPage>


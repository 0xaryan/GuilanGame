<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GuilanGame.Views.Styles">

    <Style TargetType="{x:Type ToolTip}">
        <Setter Property="FontFamily" Value="{StaticResource Fonts.IRANSans}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="#FF141212" />
        <Setter Property="Background" Value="#FF2B2A2A" />
        <Setter Property="Foreground" Value="#FFE7E7E7" />
    </Style>

</ResourceDictionary>